# Skill Gap Analyzer Configuration

# MongoDB Connection
# Local: mongodb://localhost:27017
# Campus/Cloud: mongodb+srv://user:password@server/database
MONGODB_URL=mongodb://localhost:27017

# Database name
MONGODB_DB_NAME=skill_gap_analyzer

# JWT Configuration
SECRET_KEY=your-secret-key-change-this-in-production-use-random-string-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=10080

# Environment Configuration
ENVIRONMENT=development
DEBUG=true

# API Settings
API_HOST=0.0.0.0
API_PORT=8000

# File Upload Settings
UPLOAD_DIR=uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=["pdf", "docx", "txt"]
